<?xml version='1.0' encoding='utf-8'?>
<widget id="de.tobiaswust.morserunner" version="1.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MorseRunner</name>
    <description>
        A Game about a guy who runs and jumps Morsecode.
    </description>
    <author email="kontakt@tobiaswust.de" href="http://tobiaswust.de">
        Tobias Wust
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon.png" />
        <icon density="mdpi" src="res/icon/android/icon.png" />
        <icon density="hdpi" src="res/icon/android/icon.png" />
        <icon density="xhdpi" src="res/icon/android/icon.png" />
    </platform>
    <preference name="Orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
    <engine name="android" spec="^7.0.0" />
</widget>
